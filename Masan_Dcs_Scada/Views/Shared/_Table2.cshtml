@model IEnumerable<Masan_Dcs_Scada.Models.Product>
@{
    int i = 0;
}

<table>
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            i++;
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => b.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => b.Name)
                </td>
            </tr>
        }
    </tbody>
</table>